<% layout('layouts/boilerplate') %>

<div class="container mt-5 mb-5 col-md-8">

  <h1 class="new-listing-title text-center mb-4"><%= listing.title %></h1>

  <div class="card shadow-sm">
    <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="card-img-top" style="object-fit: cover; height: 350px;">

    <div class="card-body">

      <h5 class="card-title">‚Çπ<%= listing.price %> / Night</h5>
      <p class="card-text"><%= listing.description %></p>
      <p class="text-muted">
        üìç <%= listing.location %>, <%= listing.country %>
      </p>

      <div class="d-flex justify-content-between mt-4">
        <form action="/listings/<%= listing._id %>/edit" method="GET">
          <button type="submit" class="btn btn-primary">Edit Listing</button>
        </form>

        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger">Delete Listing</button>
        </form>

      </div>
    </div>
  </div>
  <form action="/listings" method="GET" class="mt-3">
    <button type="submit" class="btn btn-secondary">Back to All Listings</button>

</div>


